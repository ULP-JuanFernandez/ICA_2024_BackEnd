@model ICA.Models.Slide

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle Slide</h1>
<hr />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 mb-8">
            <div class="card">
                <img src="@Html.DisplayFor(model => model.Imagen)" class="card-img-top" alt="Image for @Html.DisplayFor(model => model.Nombre)">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
                    <p class="card-text"><strong>Descripcion:</strong> @Html.DisplayFor(model => model.Descripcion)</p>
                    <p class="card-text"><strong>Creado:</strong> @Html.DisplayNameFor(model => model.FechaCreacion)</p>
                    <p class="card-text"><strong>Modificado:</strong> @Html.DisplayFor(model => model.FechaUltimaModificacion)</p>
                    <p class="card-text"><strong>Order:</strong> @Html.DisplayFor(model => model.Orden)</p>
                    <p class="card-text"><strong>Estado:</strong> @Html.DisplayFor(model => model.EstadoDescription)</p>
                </div>
                <div class="card-footer text-muted text-center">
                    <div class="form-group text-center">
                        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                        <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



