@model ICA.Models.Comunicacion

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Editar</h1>
<h3 class="text-center">Comunicación y Medios</h3>
<hr />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <form asp-action="Edit">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Video" class="control-label">URL Video</label>
                            <input asp-for="Video" class="form-control" placeholder="Enlace del Video" />
                            <span asp-validation-for="Video" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Imagen" class="control-label">URL Imagen</label>
                            <input asp-for="Imagen" class="form-control" placeholder="Enlace del Imagen" />
                            <span asp-validation-for="Imagen" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Titulo" class="control-label">Titulo</label>
                            <input asp-for="Titulo" class="form-control" placeholder="Titulo del Pelicula" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Creador" class="control-label">Realizador</label>
                            <input asp-for="Creador" class="form-control" placeholder="Nombre del Realizador" />
                            <span asp-validation-for="Creador" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Fecha" class="control-label">Fecha</label>
                            <input asp-for="Fecha" type="date" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label">Sinopsis</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Descripción de la Descripcion"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Integrantes" class="control-label">Integrantes</label>
                            <textarea asp-for="Integrantes" class="form-control" rows="4" placeholder="Nombre de los Integrantes"></textarea>
                            <span asp-validation-for="Integrantes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="GeneroId" class="control-label">Genero</label>
                            <div class="input-group">
                                <select asp-for="GeneroId" class="form-control">
                                    <option value="">Seleccione un genero</option>
                                    @if (ViewBag.VBGeneros != null)
                                    {
                                        foreach (var g in (IList<Genero>)ViewBag.VBGeneros)
                                        {
                                            <option value="@g.Id">@g.Nombre</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">No hay Generos disponibles</option>
                                    }
                                </select>
                                @* <div class="input-group-append">
                                <a asp-controller="Genero" asp-action="Create" title="Más" class="btn btn-primary">
                                +
                                </a>
                                </div> *@
                            </div>
                            <span asp-validation-for="GeneroId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EtiquetaId" class="control-label">Etiqueta</label>
                            <div class="input-group">
                                <select asp-for="EtiquetaId" class="form-control">
                                    <option value="">Seleccione una etiqueta</option>
                                    @if (ViewBag.VBEtiquetas != null)
                                    {
                                        foreach (var e in (IList<Etiqueta>)ViewBag.VBEtiquetas)
                                        {
                                            <option value="@e.Id">@e.Nombre</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">No hay tecnicaturas disponibles</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="MateriaId" class="control-label">Materias</label>
                                <div class="input-group">
                                    <select asp-for="MateriaId" class="form-control" multiple>
                                        <option value="">Seleccione materias</option>
                                        @if (ViewBag.VBMaterias != null)
                                        {
                                            foreach (var e in (IList<Materia>)ViewBag.VBMaterias)
                                            {
                                                <option value="@e.Id">@e.Nombre</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="">No hay materias disponibles</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Estado</label>
                                    <div>
                                        <label>
                                            <input asp-for="Estado" type="radio" value="1" /> Activo
                                        </label>
                                        <label>
                                            <input asp-for="Estado" type="radio" value="0" /> Inactivo
                                        </label>
                                    </div>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="card-footer text-muted mt-3">
                            <div class="form-group text-center ps-2">
                                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                                <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}