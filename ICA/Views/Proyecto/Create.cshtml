@model ICA.Models.Proyecto

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Proyecto</h1>
<hr />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Link" class="control-label">Enlace</label>
                            <input asp-for="Link" class="form-control" placeholder="Enlace del proyecto" />
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre del proyecto" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Creador" class="control-label">Creador</label>
                            <input asp-for="Creador" class="form-control" placeholder="Nombre del creador" />
                            <span asp-validation-for="Creador" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Fecha" class="control-label">Fecha</label>
                            <input asp-for="Fecha" type="date" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Descripción del proyecto"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="GeneroId" class="control-label">Genero</label>
                            <div class="input-group">
                                <select asp-for="GeneroId" class="form-control">
                                    <option value="">Seleccione un genero</option>
                                    @if (ViewBag.VBGeneros != null)
                                    {
                                        foreach (var g in (IList<Genero>)ViewBag.VBGeneros)
                                        {
                                            <option value="@g.Id">@g.Nombre</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">No hay Generos disponibles</option>
                                    }
                                </select>
                                <div class="input-group-append">
                                    <a asp-controller="Genero" asp-action="Create" title="Más" class="btn btn-primary">
                                        +
                                    </a>
                                </div>
                            </div>
                            <span asp-validation-for="GeneroId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EtiquetaId" class="control-label">Etiqueta</label>
                        <div class="input-group">
                                <select asp-for="EtiquetaId" class="form-control">
                                    <option value="">Seleccione una etiqueta</option>
                                    @if (ViewBag.VBEtiquetas != null)
                                    {
                                        foreach (var e in (IList<Etiqueta>)ViewBag.VBEtiquetas)
                                        {
                                            <option value="@e.Id">@e.Nombre</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">No hay tecnicaturas disponibles</option>
                                    }
                                </select>
                        </div>
                            
                    <div class="card-footer text-muted">
                        <div class="form-group text-center">
                            <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .btn-add img {
        width: 40px; /* Adjust the size as needed */
        height: auto;
        cursor: pointer; /* Indicates that the image is clickable */
        margin-left: 5px;
    }

        .btn-add img:hover {
            opacity: 0.8; /* Optional: Adds a hover effect */
        }
</style>