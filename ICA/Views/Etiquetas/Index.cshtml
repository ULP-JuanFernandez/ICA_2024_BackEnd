@model IEnumerable<ICA.Models.Etiqueta>

@{
    ViewData["Title"] = "Index";
}
    
<section class="cabe">
    <h2>Lista de Etiquetas</h2>
    <p>
        <a class="btn btn-primary" asp-action="Create">Crear</a>
    </p>
</section>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" id="errorMessage">
        @TempData["Error"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" id="successMessage">
        @TempData["SuccessMessage"]
    </div>
}
<section>
    <table class="table table-striped table-bordered" id="peliculaTable">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
                <th>@Html.DisplayNameFor(model => model.First().Tecnicatura)</th>           
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td class="truncate">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td class="text-center">
                        @if (item.Estado == 1)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Tecnicatura.Nombre)</td>
                
                    <td align="center" class="mg-0;">
                        <a asp-controller="Etiquetas" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-controller="Etiquetas" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-controller="Etiquetas" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

