@model ICA.Models.Materia

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Editar</h1>
<h3 class="text-center">Materia</h3>
<hr />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <form asp-action="Edit">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                       

                        <div class="form-group">
                            <label asp-for="Tecnicatura" class="control-label"></label>
                            <select asp-for="TecnicaturaId" class="form-control">
                                <option value="">Seleccione una Tecnicatura</option>
                                @if (ViewBag.VBTecnicaturas != null)
                                {
                                    foreach (var t in (IList<Tecnicatura>)ViewBag.VBTecnicaturas)
                                    {
                                        <option value="@t.Id">@t.Nombre</option>
                                    }
                                }
                                else
                                {
                                    <option value="">No hay tecnicaturas disponibles</option>
                                }
                            </select>
                            <span asp-validation-for="TecnicaturaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Estado</label>
                            <div>
                                <label>
                                    <input asp-for="Estado" type="radio" value="1" /> Activo
                                </label>
                                <label>
                                    <input asp-for="Estado" type="radio" value="0" /> Inactivo
                                </label>
                            </div>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer text-muted mt-3">
                        <div class="form-group text-center ps-2">
                            <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
