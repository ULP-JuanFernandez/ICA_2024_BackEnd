@model ICA.Models.Materia

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Eliminar</h1>
<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<h3 class="text-center">Materia</h3>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<hr />
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 mb-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">@Html.DisplayFor(model => model.Nombre)</h5>                   
                    <p class="card-text"><strong>Tecnicatura:</strong> @Html.DisplayFor(model => model.Tecnicatura.Nombre)</p>
                    <p class="card-text">
                        <strong>Estado:</strong> @if (Model.Estado == 1)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </p>
                </div>
                <div class="card-footer text-muted mt-3">
                    <div class="form-group text-center">
                        <form asp-action="Delete">
                            <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>